<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="styles/main.css" />
    <title>footyhub</title>
  </head>
  <body>
    <form action="/league-select" method="post">
      <div class="row">
        <div class="column"><h1>footy hub</h1></div>
        <div class="column-title-1"><h1>credits</h1></div>
      </div>
      <div class="row">
        <div class="column">
          <button type="submit" name="league" value="CL">
            <h1>🏆 champions league</h1>
          </button>
        </div>
        <div class="column">
          <button type="submit" name="league" value="PL">
            <h1>🏴󠁧󠁢󠁥󠁮󠁧󠁿 premiere league</h1>
          </button>
        </div>
        <div class="column">
          <button type="submit" name="league" value="PD">
            <h1>🇪🇸 la liga</h1>
          </button>
        </div>
      </div>
      <div class="row">
        <div class="column">
          <button type="submit" name="league" value="BL1">
            <h1>🇩🇪 bundesliga</h1>
          </button>
        </div>
        <div class="column">
          <button type="submit" name="league" value="SA">
            <h1>🇮🇹 serie a</h1>
          </button>
        </div>
        <div class="column">
          <button type="submit" name="league" value="FL1">
            <h1>🇫🇷 ligue 1</h1>
          </button>
        </div>
      </div>
    </form>
    <% if(locals.content && locals.points) { %>
    <div class="row">
      <div class="column">
        <ol>
          <% for(let i = 0; i < content.length; i++) { %>
          <li><%= content[i] %></li>
          <% } %>
        </ol>
      </div>
      <div class="column">
        <ol class="points-list">
          <% for(let i = 0; i < points.length; i++) { %>
          <li class="points-item"><%= points[i] %></li>
          <% } %>
        </ol>
      </div>
    </div>
    <% } %>
  </body>
</html>
